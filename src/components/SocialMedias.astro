---
import { Icon } from 'astro-icon/components'

const socialMedias = [
	{ name: 'linkedin', color: '#0078D4' },
	{ name: 'ig', color: '#E1306C' },
	{ name: 'youtube', color: '#FF0000' },
	{ name: 'spotfy', color: '#1ED760' }
]

const { isColored = false } = Astro.props
---

<div class="mx-4 flex flex-row gap-4">
	{
		socialMedias.map((el) => (
			<button>
				<Icon name={el.name} color={isColored ? el.color : '#fff'} />
			</button>
		))
	}
</div>
