---
import { Icon } from 'astro-icon/components'
import { navigate } from 'astro:transitions/client'

const socialMedias = [
	{ name: 'linkedin', color: '#0078D4', link: 'https://www.linkedin.com/company/grioh-games' },
	{ name: 'ig', color: '#E1306C', link: 'https://www.instagram.com/griohgames/' },
	{ name: 'youtube', color: '#FF0000', link: '' },
	{ name: 'spotfy', color: '#1ED760', link: '' }
]

const { isColored = false } = Astro.props
---

<div class="mx-4 flex flex-row gap-4">
	{
		socialMedias.map((el) => (
			<button>
				<Icon name={el.name} color={isColored ? el.color : '#fff'} />
			</button>
		))
	}
</div>
